<atlassian-plugin key="${project.groupId}.${project.artifactId}-tests" name="${project.name} Test Plugin" plugins-version="2">
    <plugin-info>
        <description>Wired testing plugin based on Kotlin P2</description>
        <version>${project.version}</version>
        <vendor name="${project.organization.name}" url="${project.organization.url}" />
    </plugin-info>

    <!-- Import from the product container -->
    <component-import key="pluginSettingsFactor" interface="com.atlassian.sal.api.pluginsettings.PluginSettingsFactory" />
    <component-import key="pluginSettingsService" interface="com.atlassian.pedagogical.service.PluginSettingsService" />

</atlassian-plugin>